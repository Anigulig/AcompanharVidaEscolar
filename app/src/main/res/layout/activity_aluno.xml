<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AlunoActivity"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="95dp"
                android:layout_height="96dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_face" />

            <TextView
                android:id="@+id/txtvwInfoNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Nome:"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtvwNomeAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/txtvwInfoNome"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtvwInfoMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Matricula:"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/txtvwInfoNome" />

            <TextView
                android:id="@+id/txtvwMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/txtvwInfoMatricula"
                app:layout_constraintTop_toBottomOf="@+id/txtvwInfoNome" />

            <TextView
                android:id="@+id/txtvwInfoTurma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Turma:"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/txtvwInfoMatricula" />

            <TextView
                android:id="@+id/txtvwTurma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/txtvwInfoTurma"
                app:layout_constraintTop_toBottomOf="@+id/txtvwInfoMatricula" />

            <TextView
                android:id="@+id/txtvwInfoSala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Sala:"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/txtvwInfoTurma" />

            <TextView
                android:id="@+id/txtvwSala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/txtvwInfoSala"
                app:layout_constraintTop_toBottomOf="@+id/txtvwTurma" />

            <TextView
                android:id="@+id/txtvwInfoPeriodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="PerÃ­odo:"
                app:layout_constraintStart_toEndOf="@+id/txtvwSala"
                app:layout_constraintTop_toBottomOf="@+id/txtvwInfoTurma" />

            <TextView
                android:id="@+id/txtvwPeriodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/txtvwInfoPeriodo"
                app:layout_constraintTop_toBottomOf="@+id/txtvwTurma" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginTop="16dp"
                android:background="#f1f1f1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5">

                <TextView
                    android:id="@+id/txtvwInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:text="Aula de Hoje"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtvwInfoProfessor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="25dp"
                    android:padding="2dp"
                    android:text="Professor:" />

                <TextView
                    android:id="@+id/txtvwProfessor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/txtvwInfoProfessor"
                    android:layout_marginLeft="81dp"
                    android:layout_marginStart="81dp"
                    android:padding="2dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtvwInfoDisciplina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtvwInfoProfessor"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/txtvwInfoProfessor"
                    android:layout_marginBottom="32dp"
                    android:padding="2dp"
                    android:text="Disciplina:" />

                <TextView
                    android:id="@+id/txtvwDisciplina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtvwProfessor"
                    android:layout_alignStart="@+id/txtvwProfessor"
                    android:layout_alignTop="@+id/txtvwInfoDisciplina"
                    android:padding="2dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtvwInfoPresente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtvwInfoProfessor"
                    android:layout_alignStart="@+id/txtvwInfoProfessor"
                    android:layout_below="@+id/txtvwInfoDisciplina"
                    android:layout_marginTop="-30dp"
                    android:padding="2dp"
                    android:text="Presente:" />

                <TextView
                    android:id="@+id/txtvwPresente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtvwProfessor"
                    android:layout_alignStart="@+id/txtvwProfessor"
                    android:layout_alignTop="@+id/txtvwInfoPresente"
                    android:padding="2dp"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtvwInfo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"
                android:text="Notas:"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <ListView
                android:id="@+id/lstvwAula"
                android:layout_width="0dp"
                android:layout_height="450dp"
                android:background="#f1f1f1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtvwInfo3"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txtvwInfo3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"
                android:text="Aulas:"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lstvwNota"
                android:visibility="invisible"/>

            <ListView
                android:id="@+id/lstvwNota"
                android:layout_width="0dp"
                android:layout_height="253dp"
                android:background="#f1f1f1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtvwInfo2" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>